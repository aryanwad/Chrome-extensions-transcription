{
  "manifest_version": 3,
  "name": "Live Transcription Assistant",
  "version": "1.0.0",
  "description": "Real-time transcription and AI assistant for videos and audio content",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "scripting",
    "desktopCapture",
    "declarativeNetRequest",
    "offscreen",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://streaming.assemblyai.com/*",
    "https://api.assemblyai.com/*",
    "https://api.openai.com/*",
    "https://id.twitch.tv/*",
    "https://api.twitch.tv/*",
    "https://usher.ttvnw.net/*",
    "https://gak2qkt4df.execute-api.us-east-1.amazonaws.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "content-audio.js"
      ],
      "css": [
        "overlay.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Live Transcription Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.css",
        "audio-processor.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}